@page
@model LemmyWeb.Models.StartUpStats
@{
    var stats = LemmyWeb.Controllers.Webhook.StartUpStats;
}

<h1>Stats</h1>
<div class="container">
    <div class="row">
        Below are some stats LemmyNanny is configured with that's feeding the data to this web instance.
    </div>
</div>
@if (stats.IsSet)
{
    <div class="container">
    <div class="form-group row">
        <label for="promt" class="col-sm-2 col-form-label">Prompt:</label>
        <div class="col-sm-10">
            @stats.Prompt
        </div>
    </div>

    <div class="form-group row">
        <label for="promt" class="col-sm-2 col-form-label">Start Time:</label>
        <div class="col-sm-10">
            @stats.StartTime
        </div>
    </div>

    <div class="form-group row">
        <label for="promt" class="col-sm-2 col-form-label">Reading Mode:</label>
        <div class="col-sm-10">
            @stats.ReadingMode
        </div>
    </div>

    <div class="form-group row">
        <label for="promt" class="col-sm-2 col-form-label">Sort Type:</label>
        <div class="col-sm-10">
            @stats.SortType
        </div>
    </div>

    <div class="form-group row">
        <label for="promt" class="col-sm-2 col-form-label">Listing Type:</label>
        <div class="col-sm-10">
            @stats.ListingType
        </div>
    </div>

    <div class="form-group row">
        <label for="promt" class="col-sm-2 col-form-label">Lemmy Host:</label>
        <div class="col-sm-10">
            <a href="@stats.LemmyHost">@stats.LemmyHost</a>
        </div>
    </div>

    <div class="form-group row">
        <label for="promt" class="col-sm-2 col-form-label">Last Seen:</label>
        <div class="col-sm-10">
            @stats.LastSeen
        </div>
    </div>

    </div>

}
else
{
    <div class="container">
The stats aren't here matey...


</div>
}
